@model aula.Models.Serviço

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizando detalhes de um SERVIÇO";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        Visualizando detalhes de um SERVIÇO
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(model => model.Descrição)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(model => model.Descrição, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Valor)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>

        <div class="form-group">
            @if (Model.Logotipo == null)
            {
                <div class="form-control-static">
                    Nenhuma imagem adicionada
                </div>
            }
            else
            {
                <div class="panel-body">
                    <img class="img-thumbnail"
                         src="@Url.Action("GetLogotipo", "Serviços",new { id = Model.ServiçoId })" style="display:block;margin-left:auto; margin-right:auto;" />
                </div>
            }
        </div>
    </div>
    <div class="panel-footer panel-info">
        @Html.ActionLink("Alterar", "Edit", new { id = Model.ServiçoId },new { @class = "btn btn-info" })
        @Html.ActionLink("Retornar para a listagem", "Index", null,new { @class = "btn btn-info" })
    </div>
</div>
